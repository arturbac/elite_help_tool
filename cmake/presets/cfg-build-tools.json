{
  "version": 4,
  "configurePresets": [
    {
      "name": "cfg-ccache",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_COMPILER_LAUNCHER": "ccache",
        "CMAKE_C_COMPILER_LAUNCHER": "ccache"
      }
    },
    {
      "name": "cfg-distcc",
      "hidden": true,
      "environment": {
        "PATH": "/usr/lib/distcc/:$penv{PATH}"
      }
    },
    {
      "name": "cfg-clang",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang-19",
        "CMAKE_CXX_COMPILER": "clang++-19"
      }
    },
    {
      "name": "cfg-gcc",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++"
      }
    },
    {
      "name": "cfg-clang-cl",
      "hidden": true,
      "toolset": "ClangCL"
    },
    {
      "name": "cfg-vcpkg-llvm-static",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${sourceDir}/cmake/llvm-toolchain-file.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-linux-llvm-release",
        "CMAKE_EXE_LINKER_FLAGS": "-static-libstdc++ -static-libgcc"
      }
    },
    {
      "name": "cfg-vcpkg-llvm-shared",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${sourceDir}/cmake/llvm-toolchain-file.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-linux-llvm-release-shared"
      }
    },
    {
      "name": "cfg-vcpkg-llvm-shared-asan",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${sourceDir}/cmake/llvm-toolchain-file.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-linux-llvm-release-shared-asan"
      }
    }
  ]
}
